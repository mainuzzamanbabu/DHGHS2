<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center"
    tools:context=".Dashboard">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="#de1e09"
        android:text="DHGHS Alumni Association"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:gravity="top|center"
        android:textSize="30dp"
        android:textStyle="italic|bold"
        android:textColor="#0957de"
        android:text=":"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:textSize="20dp"
        android:textStyle="italic|bold"
        android:textColor="#0957de"
        android:text="Welcome to Dashboard"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        android:textStyle="italic|bold"
        android:textColor="#0957de"
        android:text="Upcoming Events of DHGHSAA:"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#880E4F"
        android:text="Daulat Hossain Govt High School Golden Jubilee 2020"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Logout"
            android:text="Signout"
            android:textSize="8dp"
            android:textStyle="bold|italic"
            android:textColor="#083480"
            />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Details"
        android:text="See more details"
        android:textSize="8dp"
        android:textStyle="italic"
        android:textColor="#083480"
        />
        </LinearLayout>

    </LinearLayout>
